{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "nextjsFunc"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": ".",
    "codebase": "default",
    "predeploy": [
      "npm i -g npm@latest",
      "./node_modules/.bin/next build",
      "npm run export"
    ]
  }
}
